<% layout("/layouts/boilerplate") %>

<body>
    <div class="col-8 offset-2">
        <br>
    <h3> Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text"  name="listing[title]" value="<%= listing.title %>" class="form-control"> 
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>    
        <input type="text"  name="listing[description]" value="<%= listing.description %>" class="form-control">
    </div>    
    <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>        
        <input type="text"  name="listing[image]" value="<%= listing.image.url %>" class="form-control">
    </div>    
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input type="number"  name="listing[price]" value="<%= listing.price %>" class="form-control">
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text"  name="listing[location]" value="<%= listing.location %>" class="form-control">
    </div>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text"  name="listing[country]" value="<%= listing.country %>" class="form-control">
    </div> 
        <button type="submit" class="btn btn-dark add-btn">Edit Listing</button> 
    </form>
    <br>
</div>
</body>
